{
  "name": "@native-federation/core",
  "version": "1.0.0",
  "description": "Browser-native implementation of Module Federation for building Micro Frontends using web standards",
  "main": "dist/native-federation/bundles/native-federation.umd.js",
  "module": "dist/native-federation/fesm2022/native-federation.mjs",
  "typings": "dist/native-federation/native-federation.d.ts",
  "exports": {
    "./package.json": {
      "default": "./package.json"
    },
    ".": {
      "types": "./dist/native-federation/native-federation.d.ts",
      "import": "./dist/native-federation/fesm2022/native-federation.mjs",
      "require": "./dist/native-federation/bundles/native-federation.umd.js",
      "default": "./dist/native-federation/fesm2022/native-federation.mjs"
    }
  },
  "scripts": {
    "build": "ng build native-federation && npm run build:schematics",
    "build:core": "ng build native-federation",
    "build:schematics": "node projects/native-federation-schematics/build.js",
    "build:watch": "ng build native-federation --watch",
    "test": "ng test native-federation",
    "lint": "ng lint native-federation",
    "clean": "rm -rf dist coverage *.tgz",
    "prepublishOnly": "npm run clean && npm run build",
    "pack:core": "cd dist/native-federation && npm pack && mv *.tgz ../../",
    "pack:schematics": "cd dist/native-federation-schematics && npm pack && mv *.tgz ../../",
    "pack:only": "npm run pack:core && npm run pack:schematics", 
    "pack:all": "npm run build && npm run pack:only"
  },
  "keywords": [
    "micro-frontends",
    "module-federation",
    "esm",
    "native",
    "angular",
    "web-standards",
    "esbuild",
    "import-maps",
    "federation",
    "microfrontend"
  ],
  "author": "Native Federation Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/native-federation/core.git"
  },
  "bugs": {
    "url": "https://github.com/native-federation/core/issues"
  },
  "homepage": "https://github.com/native-federation/core#readme",
  "license": "MIT",
  "devDependencies": {
    "@angular/animations": "^18.0.0",
    "@angular/cli": "^18.0.0",
    "@angular/common": "^18.0.0",
    "@angular/compiler": "^18.0.0",
    "@angular/compiler-cli": "^18.0.0",
    "@angular/core": "^18.0.0",
    "@angular/platform-browser": "^18.0.0",
    "@angular/platform-browser-dynamic": "^18.0.0",
    "@angular-devkit/build-angular": "^18.0.0",
    "@angular-eslint/builder": "^18.0.0",
    "@angular-eslint/eslint-plugin": "^18.0.0",
    "@angular-eslint/eslint-plugin-template": "^18.0.0",
    "@angular-eslint/schematics": "^18.0.0",
    "@angular-eslint/template-parser": "^18.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.0.0",
    "typescript": "~5.4.0",
    "zone.js": "~0.14.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "esbuild": "^0.19.0",
    "semver": "^7.5.0"
  },
  "bin": {
    "native-federation": "./dist/cli/index.js"
  },
  "peerDependencies": {
    "@angular/common": "^18.0.0",
    "@angular/core": "^18.0.0"
  },
  "peerDependenciesMeta": {
    "@angular/core": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
