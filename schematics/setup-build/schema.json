{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project",
      "$default": {
        "$source": "projectName"
      }
    },
    "buildTool": {
      "type": "string",
      "description": "Build tool to configure",
      "enum": ["esbuild", "angular-cli"],
      "default": "esbuild"
    },
    "skipAngularConfig": {
      "type": "boolean",
      "description": "Skip Angular CLI integration",
      "default": false
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose logging",
      "default": false
    }
  },
  "required": ["project"]
}