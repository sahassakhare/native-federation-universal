{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project",
      "$default": {
        "$source": "projectName"
      }
    },
    "srcPath": {
      "type": "string",
      "description": "Source code directory path",
      "default": "src"
    },
    "updateMain": {
      "type": "boolean",
      "description": "Update main.ts with federation initialization",
      "default": true
    },
    "dryRun": {
      "type": "boolean",
      "description": "Show what would be changed without making changes",
      "default": false
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose logging",
      "default": false
    }
  },
  "required": ["project"]
}