{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "properties": {
    "project": {
      "type": "string",
      "description": "The name of the project to analyze",
      "$default": {
        "$source": "projectName"
      }
    },
    "webpackConfig": {
      "type": "string",
      "description": "Path to webpack configuration file",
      "default": "webpack.config.js"
    },
    "outputReport": {
      "type": "string",
      "description": "Output path for analysis report",
      "default": "MIGRATION_ANALYSIS.md"
    },
    "detailed": {
      "type": "boolean",
      "description": "Generate detailed analysis report",
      "default": true
    },
    "verbose": {
      "type": "boolean",
      "description": "Enable verbose logging",
      "default": false
    }
  },
  "required": ["project"]
}